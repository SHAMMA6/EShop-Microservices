<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - &in&</title>

    <!-- CSS -->
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2563eb;
            --hover-color: #1d4ed8;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Inter', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
            background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
        }

        .navbar-brand {
            font-weight: 700;
            letter-spacing: 1px;
            font-size: 1.5rem;
            color: #fff !important;
        }

        .nav-link {
            color: rgba(255,255,255,0.8) !important;
            padding: 0.5rem 1rem !important;
            margin: 0 0.25rem;
            border-radius: 0.5rem;
            transition: var(--transition);
        }

        .nav-link:hover {
            color: #fff !important;
            background: rgba(255,255,255,0.1);
        }

        .form-inline .input-group {
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .btn-number {
            background: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-number:hover {
            background: var(--hover-color);
        }

        main {
            flex: 1;
        }

        footer {
            background: #1e293b;
            margin-top: auto;
        }

        footer h5 {
            color: #fff;
            font-weight: 600;
            margin-bottom: 1rem;
        }

        footer a {
            color: rgba(255,255,255,0.7);
            text-decoration: none;
            transition: var(--transition);
        }

        footer a:hover {
            color: #fff;
            padding-left: 5px;
        }

        .copyright {
            border-top: 1px solid rgba(255,255,255,0.1);
            padding-top: 1rem;
        }

            
            footer .col-md-3 {
                margin-bottom: 2rem;
            }
        }
    </style>
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">&in&</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/ProductList">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Cart">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/OrderList">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Contact</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <form class="form-inline mr-3">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search...">
                                <div class="input-group-append">
                                    <button type="button" class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                        <a class="btn btn-outline-light" asp-area="" asp-page="/Cart">
                            <i class="fas fa-shopping-cart"></i>
                            <span class="badge badge-pill badge-primary ml-1">3</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="pt-5 pb-4">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <h5>About Us</h5>
                    <p class="text-muted">Creating innovative solutions for modern businesses through cutting-edge technology and user-centric design.</p>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#">Privacy Policy</a></li>
                        <li class="mb-2"><a href="#">Terms of Service</a></li>
                        <li class="mb-2"><a href="#">FAQ</a></li>
                        <li class="mb-2"><a href="#">Support</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h5>Resources</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#">Blog</a></li>
                        <li class="mb-2"><a href="#">Documentation</a></li>
                        <li class="mb-2"><a href="#">Developers</a></li>
                        <li class="mb-2"><a href="#">Partners</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6">
                    <h5>Contact Info</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            123 Tech Street, Innovation City
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-envelope me-2"></i>
                            support@in&.com
                        </li>
                        <li class="mb-3">
                            <i class="fas fa-phone me-2"></i>
                            +1 (555) 123-4567
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row mt-5 copyright">
                <div class="col-md-6 text-center text-md-start">
                    <p class="mb-0">
                        <a href="#" class="text-muted">Back to top</a>
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-0 text-muted">
                        Crafted with <i class="fas fa-heart text-danger"></i> by 
                        <a href="https://www.linkedin.com/in/yousef-abdel-fattah-b7bb64293/" class="text-reset">Yousef</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JS -->
    <script src="//code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>